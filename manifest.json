{
  "name": "Can You Afford It?",
  "description": "Shop for things online based on how much time you have spent earning it.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["https://www.amazon.in/*", "https://www.amazon.com/*"],
      "run_at": "document_end",
      "js": [ "lib/currency.js", "amazon/amazonScript.js"]
    }
  ],
  "action": {
    "default_title": "Get product value",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "options_page": "options.html"
}
